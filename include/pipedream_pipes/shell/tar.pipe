---
version: 0.0.1

public:
  tarball-shasum:
    pipe:
      - tarball-shasum::tar:
          shell:
            run: "tar -cf - @{dirs}"
      - tarball-shasum::compute-shasum:
          shell:
            run: "shasum"
      - tarball-shasum::extract-shasum:
          shell:
            run: "sed 's/[^0-9a-f]*//g'"
      - tarball-shasum::remove-new-line:
          shell:
            run: "tr -d '\n'"
